@using Radzen.Blazor
@attribute [Authorize(Roles = "Admin")]
@attribute [Authorize(Roles = "User")]

<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
    <LoginDisplay />
</nav>

<style>
    .layout-footer-fixed .brand-link-small{
        display: none;
    }

    .sidebar-collapse .brand-link {
        display: none;
    }

    .sidebar-collapse.layout-footer-fixed .brand-link-small {
        display: block;
    }

    .brand-link-small {
        padding-left: 20px;
    }
</style>

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->

    <a href="/" class="brand-link">
        <h2><span style="color:darkgrey">AI</span><span style="color:Highlight">Exam</span><span style="color:darkgrey">Scheduler</span></h2>
    </a>

    <a href="/" class="brand-link brand-link-small">
        <h2><span style="color:darkgrey">E</span><span style="color:Highlight">S</span></h2>
    </a>

    <div class="sidebar">

        <nav class="mt-2">
            <RadzenCard class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                <RadzenPanelMenu Style="width:300px;">
                    <AuthorizeView Roles="Admin">
                        <Authorized>
                            <RadzenPanelMenuItem Text="General" Icon="home">
                                <RadzenPanelMenuItem Text="Dashboard" Path="/" icon="dashboard"></RadzenPanelMenuItem>
                            </RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Text="Setup" Icon="settings_suggest">
                                <RadzenPanelMenuItem Text="Student Setup" Path="students" Icon="badge"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Exam Student Setup" Path="examstudent" Icon="badge"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Exam Setup" Path="exams" Icon="question_answer"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Proctor Setup" Path="faculty" Icon="perm_identity"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Proctor Assignment" Path="studentfaculty" Icon="integration_instructions"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Black List" Path="BlackList" Icon="badge"></RadzenPanelMenuItem>
                            </RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Text="LMS Integration" Icon="sync_alt">
                                <RadzenPanelMenuItem Text="LMS Setup" Path="systemsetup" Icon="add_link"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Bulk Upload Faculty" Path="facultyupload" Icon="publish"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Bulk Upload Students" Path="studentupload" Icon="publish"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Bulk Upload Exams" Path="examupload" Icon="publish"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Upload Student/Exam File" Path="Uploadstudentexamfiles" Icon="publish"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Upload Student/Exam/Faculty" Path="UploadStudentExamFaculty" Icon="publish"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Bulk Upload Student Images" Path="studentImages" Icon="publish"></RadzenPanelMenuItem>
                                @*<RadzenPanelMenuItem Text="Bulk Upload" Path="uploads" Icon="publish"></RadzenPanelMenuItem>*@
                            </RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Text="Archives" Path="searchstudent" Icon="send_and_archive"></RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Text="Live Proctor" Path="liveproctor" Icon="photo_camera_front">
                            </RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Text="Reports" Icon="assessment">
                                <RadzenPanelMenuItem Text="Camera Exception" Path="reports" Icon="videocam_off"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Supervisor Message Report" Path="MessageReport" Icon="assessment"></RadzenPanelMenuItem>
                            </RadzenPanelMenuItem>
                        </Authorized>
                    </AuthorizeView>
                    <AuthorizeView Roles="User">
                        <Authorized>
                            <RadzenPanelMenuItem Text="General" Icon="home">
                                <RadzenPanelMenuItem Text="Dashboard" Path="/" icon="dashboard"></RadzenPanelMenuItem>
                            </RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Text="Setup" Icon="settings_suggest">
                                <RadzenPanelMenuItem Text="Student Setup" Path="students" Icon="badge"></RadzenPanelMenuItem>
                            </RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Text="Archives" Path="searchstudent" Icon="send_and_archive"></RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Text="Live Proctor" Path="liveproctor" Icon="photo_camera_front"></RadzenPanelMenuItem>
                        </Authorized>
                    </AuthorizeView>

                </RadzenPanelMenu>
            </RadzenCard>
        </nav>
    </div>
</aside>
